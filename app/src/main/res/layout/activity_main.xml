<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TableLayout
    android:id="@+id/table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow>

        <TextView
            android:padding="2dp"
            android:layout_weight="1"
            android:text="tournament ID"/>

        <TextView
            android:padding="2dp"

            android:layout_weight="1"

            android:text="tournament type"/>

        <TextView
            android:padding="2dp"

            android:layout_weight="1"
            android:text="player ID"/>

        <TextView
            android:padding="2dp"

            android:layout_weight="1"
            android:text="gained experience"/>

        <TextView
            android:padding="2dp"

            android:layout_weight="1"
            android:text="total experience"/>

    </TableRow>


</TableLayout>
</ScrollView>