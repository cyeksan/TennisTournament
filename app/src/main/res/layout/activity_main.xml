<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TableLayout
        android:id="@+id/tournamentWinnersTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:padding="2dp"
                android:text="tournament ID" />

            <TextView
                android:layout_weight="1"

                android:padding="2dp"

                android:text="tournament type" />

            <TextView
                android:layout_weight="1"

                android:padding="2dp"
                android:text="player ID" />

            <TextView
                android:layout_weight="1"

                android:padding="2dp"
                android:text="gained experience" />

            <TextView
                android:layout_weight="1"

                android:padding="2dp"
                android:text="total experience" />

        </TableRow>


    </TableLayout>

    <TableLayout
        android:id="@+id/finalScores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:padding="2dp"
                android:text="order" />

            <TextView
                android:layout_weight="1"
                android:padding="2dp"
                android:text="player ID" />

            <TextView
                android:layout_weight="1"

                android:padding="2dp"

                android:text="gained experience" />

            <TextView
                android:layout_weight="1"

                android:padding="2dp"

                android:text="total experience" />
        </TableRow>
    </TableLayout>
    </LinearLayout>
</ScrollView>